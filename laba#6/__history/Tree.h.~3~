#include <iomanip>
#include <ComCtrls.hpp>
using namespace std;


struct Node
{
	int key, data, balance;
	TTreeNode *index;
	Node *left, *right;
};

class Tree
{
private:
	Node *Root;
	int size;
public:
	Tree() {Root = NULL; size = 0;};
	~Tree();
	void Clear(Node*);
	Node *GetRoot();
	void Insert(int,int);
	void Delete(int);
	void LeftOrder(Node*);
	void Print();
	void Clear();
};

Tree tree;
#endif
